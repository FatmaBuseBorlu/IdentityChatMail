@using Microsoft.AspNetCore.Identity
@using IdentityChatMail.Entities
@inject UserManager<AppUser> UserManager

@{
    var user = await UserManager.GetUserAsync(User);
    var profilResmi = user?.ProfileImageUrl ?? "/quixlab-master/images/user/1.png";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>IdentityChat - Panel</title>

    <link href="~/quixlab-master/css/style.css" rel="stylesheet">

    <link href="~/quixlab-master/plugins/sweetalert/css/sweetalert.css" rel="stylesheet">

    <style>
        .brand-logo {
            background-color: #7571f9;
        }
    </style>
</head>

<body>

    <div id="preloader">
        <div class="loader">
            <svg class="circular" viewBox="25 25 50 50">
                <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="3" stroke-miterlimit="10" />
            </svg>
        </div>
    </div>

    <div id="main-wrapper">

        <div class="nav-header">
            <div class="brand-logo">
                <a href="/Message/Inbox">
                    <b class="logo-abbr"><img src="~/quixlab-master/images/logo.png" alt=""> </b>
                    <span class="logo-compact"><img src="~/quixlab-master/images/logo-compact.png" alt=""></span>
                    <span class="brand-title">
                        <div style="display: flex; align-items: center; justify-content: center; height: 100%;">
                            <i class="fa fa-envelope-open" style="color: white; font-size: 24px; margin-right: 10px;"></i>

                            <span style="color: white; font-weight: bold; font-size: 20px; text-transform: none;">
                                IdentityMail
                            </span>
                        </div>

                    </span>
                </a>
            </div>
        </div>

        <div class="header">
            <div class="header-content clearfix">

                <div class="nav-control">
                    <div class="hamburger">
                        <span class="toggle-icon"><i class="icon-menu"></i></span>
                    </div>
                </div>

                <div class="header-right">
                    <ul class="clearfix">
                        <li class="icons dropdown">
                            <div class="user-img c-pointer position-relative" data-toggle="dropdown">

                                <span class="mr-2" style="color: #464a53; font-weight: 600; font-size: 14px; text-transform: capitalize;">
                                    @User.Identity.Name
                                </span>

                                <span class="activity active"></span>

                                <img src="@profilResmi" height="40" width="40" alt="" style="object-fit: cover; border-radius: 50%;">

                            </div>

                            <div class="drop-down dropdown-profile animated fadeIn dropdown-menu">
                                <div class="dropdown-content-body">
                                    <ul>
                                        <li>
                                            <a href="/Profile/UserDetail">
                                                <i class="icon-user"></i> <span>Profilim</span>
                                            </a>
                                        </li>

                                        <hr class="my-2">

                                        <li>
                                            <a href="/Login/LogOut">
                                                <i class="icon-key"></i> <span>Çıkış Yap</span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>

            </div>
        </div>

        <div class="nk-sidebar">
            <div class="nk-nav-scroll">
                <ul class="metismenu" id="menu">
                    <li>
                        <a href="/Message/CreateMessage" aria-expanded="false" style="background-color: #7571f9 !important; color: white !important; border-radius: 5px; margin: 10px 15px;">
                            <i class="icon-note menu-icon" style="color: white !important;"></i>
                            <span class="nav-text" style="font-weight: bold;">Mesaj Oluştur</span>
                        </a>
                    </li>

                    <li>
                        <a href="/Message/Inbox" aria-expanded="false">
                            <i class="icon-envelope menu-icon"></i><span class="nav-text">Gelen Kutusu</span>
                        </a>
                    </li>
                    <li>
                        <a href="/Message/Important" aria-expanded="false">
                            <i class="icon-star menu-icon"></i><span class="nav-text">Yıldızlı Mesajlar</span>
                        </a>
                    </li>
                    <li>
                        <a href="/Message/Sendbox" aria-expanded="false">
                            <i class="icon-paper-plane menu-icon"></i><span class="nav-text">Gönderilmiş Postalar</span>
                        </a>
                    </li>

                    <li>
                        <a href="/Message/Trash" aria-expanded="false">
                            <i class="icon-trash menu-icon"></i><span class="nav-text">Çöp Kutusu</span>
                        </a>
                    </li>

                </ul>
            </div>
        </div>

        <div class="content-body">
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>

        <div class="footer">
            <div class="copyright">
                <p>Copyright &copy; @DateTime.Now.Year IdentityChat</p>
            </div>
        </div>
    </div>

    <script src="~/quixlab-master/plugins/common/common.min.js"></script>
    <script src="~/quixlab-master/js/custom.min.js"></script>
    <script src="~/quixlab-master/js/settings.js"></script>
    <script src="~/quixlab-master/js/gleek.js"></script>
    <script src="~/quixlab-master/js/styleSwitcher.js"></script>

    <script src="~/quixlab-master/plugins/sweetalert/js/sweetalert.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>