@using IdentityChatMail.Entities
@model Message

@{
    ViewData["Title"] = "Yeni Mesaj Oluştur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Mesajlar</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Yeni Mesaj</a></li>
        </ol>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">

                    <div class="email-right-box" style="margin-left: 0 !important; width: 100% !important;">


                        <div class="compose-content mt-5">
                            <form method="post">

                                <div class="form-group">
                                    <input type="email" class="form-control bg-transparent" asp-for="ReceiverEmail" placeholder=" Kime:" style="border: 1px solid #eaeaea;">
                                </div>

                                <div class="form-group">
                                    <input type="text" class="form-control bg-transparent" asp-for="Subject" placeholder=" Konu Başlığı" style="border: 1px solid #eaeaea;">
                                </div>

                                <div class="form-group">
                                    <textarea class="textarea_editor form-control bg-transparent" rows="12" asp-for="MessageDetail" placeholder="Mesajınızı buraya yazınız..." style="border: 1px solid #eaeaea;"></textarea>
                                </div>

                                <div class="text-left m-t-15">
                                    <button class="btn btn-primary m-b-30 m-t-15 f-s-14 p-l-20 p-r-20 m-r-10" type="submit" style="background-color: #7571f9; border-color: #7571f9;">
                                        <i class="fa fa-paper-plane m-r-5"></i> GÖNDER
                                    </button>

                                    <a href="/Message/Inbox" class="btn btn-dark m-b-30 m-t-15 f-s-14 p-l-20 p-r-20">
                                        <i class="ti-close m-r-5 f-s-12"></i> İptal Et
                                    </a>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>